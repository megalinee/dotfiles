 *******************************************************************************/

* {
    font:   "Monospace 12";

    background-color:   transparent;
    text-color:         @fg0;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    location:       center;
    width:          480;
    border-radius:  10px;
    border-color:       @bg3;


    y-offset: -150px;
    
    background-image:   linear-gradient(315deg, rgba(74, 0, 68, 0.9), rgba(38, 0, 56, 0.9));
    
    order-color:       @bg3;
}

mainbox {
    padding:    12px;
}

inputbar {
    background-image:   linear-gradient(80deg, rgba(255, 163, 220, 0.7), rgba(255, 125, 217, 0.7));
    border-color:       @bg3;

    //border:         4px;
    border-radius:  10px;

    padding:    8px 16px;
    spacing:    8px;
    children:   [ prompt, entry ];
}

prompt {
    enabled: false;
    text-color: #edc2ff;
}

entry {
    placeholder:        "Search ðŸŒ¸";
    text-color: #edc2ff;
}

message {
    margin:             12px 0 0;
    border-radius:      10px;
    border-color:       @bg2;
    background-color:   @bg2;
}

textbox {
    padding:    8px 24px;
}

listview {
    background-color:   transparent;

    margin:     12px 0 0;
    lines:      8;
    columns:    1;

    fixed-height: false;
}

element {
    padding:        8px 16px;
    spacing:        8px;
    border-radius:  10px;
}

element normal active {
    text-color: @bg3;
}

element selected normal, element selected active {
    background-image:   linear-gradient(80deg, rgba(255, 163, 220, 0.2), rgba(255, 140, 217, 0.2));
    
}

element-icon {
    size:           1em;
    vertical-align: 0.5;
}

element-text {
    text-color: inherit;
}
